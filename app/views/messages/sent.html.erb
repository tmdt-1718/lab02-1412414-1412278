<div class="container">
<div class="list-group">
  <% @messages.each do |message| %>
    <% if message.status == 1 %>
        <a class="list-group-item active" id="list_group_<%= message.id %>">
            <%= message.first_name %>
            <%= message.last_name %> <br>
            seen at: <%= message.updated_at%>
        </a>
    <% else %>
            <a class="list-group-item list-group-item-warning">
                <%= message.first_name %>
                <%= message.last_name %>
            </a>
    <% end %>
    <a class="list-group-item">
        <%= message.content %>
    </a>
    <% if message.image_file_name %>
        <a class="list-group-item">
            <%= image_tag message.image.url %>
        </a>
    <% end %>
    <a class="list-group-item">
        sent at: <%= message.created_at %>
    </a>
    <%end%>
</div>
</div>
